.table-page
    Spin(fix, v-show="loading")
        #cclogo
            #translation
                #logoImg
    .search-panel(v-if="searchColumns && searchColumns.length>0")
        ul
            li(v-for="(item, index) in searchColumns", ref="searchList")
                CCInput(:type="item.type", :value="item.value", :placeholder="item.title",
                :attribute="item.key", @change="onChangeSearchCondition", :options="item.options",
                :loading="item.loading", :onSearch="item.optionsFilter", :onFocus="(isOpen)=>{loadOptions(isOpen, item)}", :defaultLabel="item.defaultLabel")
            li
                Button(type="primary", icon="ios-search", @click="search") 搜索

    .table-panel
        Table(stripe, highlight-row, ref="selection", @on-row-click="clickRow", @on-row-dblclick="dblClickRow",
            :columns="displayColumns" :data="datalist", :height="height")
        Page(@on-change="changePageNum", @on-page-size-change="changePageSize", :current="pageIndex", :page-size="pageSize", :total="total", show-elevator, show-sizer, transfer)
        Button(shape="circle", @click="onEdit", icon="md-create", :title="修改", class="table-option-button")
        Button(shape="circle", @click="preRemove", icon="md-remove", title="删除", class="table-option-button")
        Button(shape="circle", @click="onAdd", icon="md-add", title="新增", class="table-option-button")
        //Button(v-if="hasEdit", shape="circle", @click="onSubmit", icon="md-checkmark", title="提交", class="table-option-button")
    Modal(v-model="hasEdit", :title="modalTitle", ok-text="保存", cancel-text="取消", @on-ok="onSubmit")
        Form(:model="editItem", :label-width="80")
            FormItem(v-for="(item, index) in editColumns", ref="FormItems", :label="item.type=='checkbox'?'':item.title", :class="item.type=='checkbox' ? 'cctable-checkbox': 'cctable-input'")
                CCInput(:type="item.type", :value="item.type=='checkbox'?(editItem[item.key]? [1] : [0]) : editItem[item.key]", :placeholder="item.title",
                :attribute="item.key", @change="onChangeFormValue", :options="item.options", :base64="false", :defaultLabel="item.defaultLabel",
                :loading="item.loading", :onSearch="item.optionsFilter", :onFocus="(isOpen)=>{loadOptions(isOpen, item)}")
    Modal(v-model="hasDelete", title="删除", ok-text="确定", cancel-text="取消", @on-ok="onRemove")
        p(slot="header", style="color:#f60;text-align:center")
            Icon(type="ios-information-circle")
            span 确认删除
        div(style="text-align:center")
            p 数据删除后将无法撤销
            p 是否继续删除？